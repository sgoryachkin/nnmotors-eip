<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC  
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<!-- Root layout -->

 	<definition name="component/header" template="/WEB-INF/view/portal/header.jsp" preparer="headerViewPreparer"/>
	<definition name="component/footer" template="/WEB-INF/view/portal/footer.jsp" />

    <definition name="layout" template="/WEB-INF/view/portal/layout.jsp" >
		<put-attribute name="header" value="component/header" />
		<put-attribute name="footer" value="component/footer" />
	</definition>
	
	<!-- Login -->
	
	<definition name="content/login" template="/WEB-INF/view/portal/login.jsp"/>
	
	<definition name="login" extends="layout">
		<put-attribute name="title" value="Вход" />
		<put-attribute name="content" value="content/login" />
	</definition>
	
	<!-- User layout -->
	
	<definition name="component/user/header" template="/WEB-INF/view/portal/user/header.jsp"/>
	
	<definition name="user/layout" template="/WEB-INF/view/portal/user/layout.jsp">
		<put-attribute name="userHeader" value="user/header" />
	</definition>
	
	<definition name="content/user/profile" template="/WEB-INF/view/portal/user/profile.jsp"/>
	<definition name="content/user/profile-edit" template="/WEB-INF/view/portal/user/profile-edit.jsp"/>
	
	<definition name="/user/profile" extends="user/layout">
		<put-attribute name="title" value="Профиль" />
		<put-attribute name="userContent" value="component/user/profile" />
	</definition>
	
	<definition name="/user/profile-edit" extends="user/layout">
		<put-attribute name="title" value="Профиль (редактирование)" />
		<put-attribute name="userContent" value="component/user/profile-edit" />
	</definition>


</tiles-definitions>