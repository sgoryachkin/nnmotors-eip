<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC  
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<!-- Root layout -->

	<definition name="root_header" template="/WEB-INF/view/portal/header.jsp"
		preparer="headerViewPreparer" />
	<definition name="root_footer" template="/WEB-INF/view/portal/footer.jsp" />

	<definition name="root_layout" template="/WEB-INF/view/portal/layout.jsp">
		<put-attribute name="header" value="root_header" />
		<put-attribute name="footer" value="root_footer" />
	</definition>

	<!-- Login -->

	<definition name="login" extends="root_layout">
		<put-attribute name="title" value="Вход" />
		<put-attribute name="content" value="/WEB-INF/view/portal/login.jsp" />
	</definition>

	<!-- News -->

	<definition name="news.list" extends="root_layout">
		<put-attribute name="title" value="Новости" />
		<put-attribute name="content"
			value="/WEB-INF/view/portal/news/news-list.jsp" />
	</definition>

	<!-- User layout -->

	<definition name="user_layout" template="/WEB-INF/view/portal/user/layout.jsp">
		<put-attribute name="userHeader"
			value="/WEB-INF/view/portal/user/header.jsp" />
	</definition>

	<definition name="user.profile" extends="root_layout">
		<put-attribute name="title" value="Профиль" />
		<put-attribute name="content">
			<definition extends="user_layout">
				<put-attribute name="userContent"
					value="/WEB-INF/view/portal/user/user-profile.jsp" />
			</definition>
		</put-attribute>
	</definition>

	<definition name="user.profile-edit" extends="root_layout">
		<put-attribute name="title" value="Профиль (редактирование)" />
		<put-attribute name="content">
			<definition extends="user_layout">
				<put-attribute name="userContent"
					value="/WEB-INF/view/portal/user/user-profile-edit.jsp" />
			</definition>
		</put-attribute>
	</definition>

</tiles-definitions>